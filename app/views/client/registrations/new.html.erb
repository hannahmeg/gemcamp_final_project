<body class="bg-gray-100 dark:bg-gray-800">
<div class="max-w-4xl mx-auto p-4">
  <main class="py-8">
    <h1 style="text-align: center;">Sign Up</h1>
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "py-8" }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
        <label for="user_email" class="sr-only">Email</label>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "w-full p-2 border mb-4 rounded-md", id: "user_email", required: true %>

        <label for="user_password" class="sr-only">Password</label>
        <%= f.password_field :password, autocomplete: "new-password", placeholder: "Password", class: "w-full p-2 border mb-4 rounded-md", id: "user_password", required: true %>

        <label for="user_username" class="sr-only">Username</label>
        <%= f.text_field :username, placeholder: "Username", class: "w-full p-2 border mb-4 rounded-md", id: "user_username" %>

        <label for="user_password_confirmation" class="sr-only">Password Confirmation</label>
        <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: "Password Confirmation", class: "w-full p-2 border mb-4 rounded-md", id: "user_password_confirmation", required: true %>

        <label for="user_phone_number" class="sr-only">Phone Number</label>
        <%= f.text_field :phone_number, placeholder: "Phone Number", class: "w-full p-2 border mb-4 rounded-md", id: "user_phone_number" %>

        <%= f.file_field :image %>

        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white p-2 rounded-md">Sign up</button>
      </div>
    <% end %>

    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4 mt-4">
      <a href="<%= client_root_path %>" class="bg-gray-300 hover:bg-gray-400 text-gray-800 text-center py-2 px-4 rounded-full block">Log In</a>
    </div>
  </main>
</div>
</body>
