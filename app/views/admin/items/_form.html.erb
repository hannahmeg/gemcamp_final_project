<div class="container-md p-10">
  <%= form_with(model: [:admin, @item], local: true) do |form| %>
    <div class="form-group">
      <%= form.label :image %>
      <%= form.file_field :image, class: 'form-control' %>
    </div>

    <div class="form-group">
      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :quantity %>
      <%= form.number_field :quantity, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :minimum_tickets %>
      <%= form.number_field :minimum_tickets, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :online_at %>
      <%= form.datetime_local_field :online_at, class: 'form-control', required: true %>
    </div>

    <div class="form-group">
      <%= form.label :offline_at %>
      <%= form.datetime_local_field :offline_at, class: 'form-control', required: true %>
    </div>

    <div class="actions">
      <%= form.submit 'Submit', class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
