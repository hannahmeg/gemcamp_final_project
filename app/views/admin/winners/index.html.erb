<div class="container text-sm" style="padding: 20px;">
  <h1>Winners List</h1>

  <%= form_with url: admin_winners_path, method: :get, local: true do |form| %>
    <div class="row">
      <div class="col-md-2">
        <%= form.label :serial_number, 'Serial Number' %>
        <%= form.text_field :serial_number, class: 'form-control' %>
      </div>
      <div class="col-md-3">
        <%= form.label :email, 'Email' %>
        <%= form.text_field :email, class: 'form-control' %>
      </div>
      <div class="col-md-2">
        <%= form.label :state, 'State' %>
        <%= form.select :state, options_for_select(Winner.aasm.states.map(&:name).prepend('All')), { include_blank: true }, class: 'form-control' %>
      </div>
      <div class="col-md-2">
        <%= form.label :start_date, 'Start Date' %>
        <%= form.date_field :start_date, class: 'form-control' %>
      </div>
      <div class="col-md-2">
        <%= form.label :end_date, 'End Date' %>
        <%= form.date_field :end_date, class: 'form-control' %>
      </div>
      <div class="col-md-12 text-right">
        <%= form.submit 'Search', class: 'btn btn-primary' %>
      </div>
  <% end %>
    </div>


  <div class="pt-10">
    <table class="table table-bordered">
      <thead>
      <tr>
        <th>Item</th>
        <th>User</th>
        <th>State</th>
        <th>Actions</th>
      </tr>
      </thead>
      <tbody>
      <% @winners.each do |winner| %>
        <tr>
          <td><%= winner.item.name %></td>
          <td><%= winner.user.email %></td>
          <td><%= winner.state %></td>
          <td>
            <% if winner.may_submit? %>
              <%= button_to "Submit", submit_admin_winner_path(winner), method: :post, class: 'btn btn-outline-primary' %>
            <% end %>

            <% if winner.may_pay? %>
              <%= button_to "Pay", pay_admin_winner_path(winner), method: :post, class: 'btn btn-outline-primary' %>
            <% end %>

            <% if winner.may_ship? %>
              <%= button_to "Ship", ship_admin_winner_path(winner), method: :post, class: 'btn btn-outline-primary' %>
            <% end %>

            <% if winner.may_deliver? %>
              <%= button_to "Deliver", deliver_admin_winner_path(winner), method: :post, class: 'btn btn-outline-primary' %>
            <% end %>

            <% if winner.may_publish? %>
              <%= button_to "Publish", publish_admin_winner_path(winner), method: :post, class: 'btn btn-outline-primary' %>
            <% end %>

            <% if winner.may_remove_publish? %>
              <%= button_to "Remove Publish", remove_publish_admin_winner_path(winner), method: :post, class: 'btn btn-outline-primary' %>
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>
  <%= paginate @winners %>
</div>