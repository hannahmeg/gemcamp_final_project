<%= form_with(model: [:admin, @member_level], local: true) do |form| %>

  <div class="form-group">
    <%= form.label :required_members, "Required Members" %>
    <%= form.number_field :required_members, class: "form-control", min: 1, required: true, style: 'width: 300px;' %>
  </div>

  <div class="form-group">
    <%= form.label :coins, "Coins" %>
    <%= form.number_field :coins, class: "form-control", min: 1, required: true, style: 'width: 300px;' %>
  </div>

  <div class="actions pt-2">
    <%= form.submit class: "btn btn-primary" %>
  </div>
<% end %>