  <%= link_to 'Sign out', destroy_user_session_path, data: { 'turbo-method': :delete } %>
  <%= render partial: 'homepage' %>

<% else %>
  <body class="bg-gray-100 dark:bg-gray-800">
  <div class="max-w-4xl mx-auto p-4">
    <main class="py-8">
      <h1 style="text-align: center;">Log In</h1>
      <form action="<%= client_sign_in_path %>" method="post">
        <input type="email" name="user[email]" placeholder="Email" class="w-full p-2 border mb-4 rounded-md" required>
        <input type="password" name="user[password]" placeholder="Password" class="w-full p-2 border mb-4 rounded-md" required>
        <button type="submit" class="w-full bg-blue-500 hover:bg-blue-600 text-white p-2 rounded-md">Login</button>
      </form>
      <div class="gsm:grid-cols-2 gap-4 mt-4">
        <a href="<%= sign_up_path %>" class="bg-gray-300 hover:bg-gray-400 text-gray-800 text-center py-2 px-4 rounded-full block">Register</a>
      </div>
    </main>
  </div>
  </body>
<% end %>

