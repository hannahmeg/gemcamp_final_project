<div class="container text-sm" style="padding: 20px;">
  <h1>Categories</h1>

  <table class="table table-striped">
    <thead>
    <tr>
      <th>Name</th>
      <th>Created At</th>
      <th>Actions</th>
    </tr>
    </thead>
    <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><%= category.name %></td>
        <td><%= category.created_at.strftime("%B %d, %Y %I:%M %p") %></td>
        <td>
          <%= link_to 'Edit', edit_admin_category_path(category), class: "btn btn-primary btn-sm" %>
          <%= button_to 'Delete', admin_category_path(category), method: :delete, class: "btn btn-danger btn-sm" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>
  <%= paginate @categories %>
  <div class="pt-4">
    <%= link_to 'New Category', new_admin_category_path, class: "btn btn-primary" %>
  </div>
</div>