<%= render 'client/homepage/shared_header' %>

<div class="container-md p-5">
  <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-4 py-4">
    <% @offers.each do |offer| %>
      <% if offer %>
        <div class="space-y-4 h-full">
          <div class="border p-4 h-full flex flex-col justify-between items-center">
            <% if offer.image&.present? %>
              <%= image_tag offer.image.url, size: "100x100", style: "border-radius: 50%;" %>
            <% else %>
              <img src="https://placehold.co/100x100" alt="User Avatar" class="rounded-full mb-4"/>
            <% end %>
            <div class="font-bold">Name: <%= offer.name %></div>
            <div class="font-bold">Amount: <%= offer.amount %></div>
            <div class="font-bold">Coin: <%= offer.coin %></div>
            <%= button_to 'Buy', client_orders_path(offer_id: offer.id), class: 'btn btn-outline-danger', method: :post %>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>